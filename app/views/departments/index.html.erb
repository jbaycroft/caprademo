<div class="table">
	<table>
		<tr>
			<th class="top first" colspan="4">
				Demo Client Department Listing
			</th>
		</tr>
		<tr>
			<th class="sub first c1">
				Department Name:
			</th>
			<th class="sub first c2">
				Department Location:
			</th>
			<th class="sub first c3">
				Date Complete:
			</th>
			<th class="sub first c4">
				Department Actions:
			</th>
		</tr>
		<% @departments.each do |department| %>
		<tr>
			<td class="c1">
				<%= department.name %>
			</td>
			<td class="c2">
				<%= department.location %>
			</td>
			<td class="c3">
				<%= department.date_completed %>
			</td>
			<td class="c4">
				<ul class="action">
					<li><%= link_to 'Edit Info', edit_department_path(department), :class=>"tlink" %></li>
					<li><%= link_to 'Edit Tasks', department_path(department), :class=>"tlink" %></li>
					<li><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"tlink" %></li>
				</ul>
			</td>
		</tr>
		<% end %>
		<tr>
			<td class="bottom" colspan="4">
				<%= link_to 'Create New Department', new_department_path, :class=>"blink" %>
			</td>
		</tr>
	</table>
</div>
