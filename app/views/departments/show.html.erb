<div class="table">
	<table>
		<tr>
			<th class="top" colspan="2">
				<%= @department.name %> Department Description
			</th>
		</tr>
		<tr>
			<th class="sub tleft w20">
				Department Name:
			</th>
			<th class="sub tleft">
				<%= @department.name %>
			</th>
		</tr>
		<tr>
			<td class="tleft">
				Department Description:
			</td>
			<td class="tleft">
				<%= @department.description %>
			</td>
		</tr>
		<tr>
			<td class="tleft">
				Department Location:
			</td>
			<td class="tleft">
				<%= @department.location %>
			</td>
		</tr>
		<tr>
			<td class="tleft">
				Assessment Complete:
			</td>
			<td class="tleft">
				<%= @department.complete ? 'Yes' : 'No' %>
			</td>
		</tr>
		<tr>
			<td class="tleft">
				Date Completed:
			</td>
			<td class="tleft">
				<%= @department.date_completed %>
			</td>
		</tr>
		<tr>
			<td class="tleft">
				Department Actions:
			</td>
			<td class="tcenter">
				<ul class="menu w100">
					<li><%= link_to 'Edit Department Info', edit_department_path(@department), :class=>"link2" %></li>
					<li><%= link_to 'Back to Department List', departments_path, :class=>"link2" %></li>
				</ul>
			</td>
		</tr>
	</table>
</div>

<div class="table">
	<table>
		<tr>
			<th class="top" colspan="4">
				Tasks Performed in <%= @department.name %> Department
			</th>
		</tr>
		<tr>
			<th class="sub tleft w25">
				Task Name:
			</th>
			<th class="sub tleft w25">
				Task Location:
			</th>
			<th class="sub tcenter w20">
				Date Complete:
			</th>
			<th class="sub tcenter">
				Task Actions:
			</th>
		</tr>
	</table>
		<%= div_for(@department.tasks) do |task| %>
			<div class="tleft">
				<%= task.name %>
			</div>
			<div class="tleft">
				<%= task.location %>
			</div>
			<div class="tcenter">
				<%= task.date_completed %>
			</div>
			<div class="tcenter">
				<ul class="menu w100">
					<li><%= link_to 'Edit Info', edit_department_task_path(@department,task), :class=>"link3" %></li>
					<li><%= link_to 'Edit Hazards', department_task_path(@department,task), :class=>"link3" %></li>
					<li><%= link_to 'Destroy', [@department,task], method: :delete, remote: true, data: { confirm: 'Are you sure?' }, :class=>"link3" %></li>
				</ul>
			</div>
		<% end %>
	<table>
		<tr>
			<td class="tcenter" colspan="4">
				<%= link_to 'Create New Task', new_department_task_path(@department), :class=>"link1" %>
			</td>
		</tr>
	</table>
</div>