<table>
		<tr>
			<th class="sub tleft w20">
				
			</th>
			<th class="sub tleft">
				
			</th>
		</tr>
		<tr>
			<td class="tcenter">
				<ul class="menu w100">
					<li class="checkbox1 one hidden" id="yes_no">
						<div class="hidden" id="index">1</div>
						<div class="label" id="haz1">Hazard Type 1</div>
						<div class="hidden" id="value"><%= @task.hazard1 ? '1' : '0' %></div>
						<div class="hidden" id="comma">,</div>
					</li>
					<li class="checkbox1 two hidden" id="yes_no">
						<div class="hidden" id="index">2</div>
						<div class="label" id="haz2">Hazard Type 2</div>
						<div class="hidden" id="value"><%= @task.hazard2 ? '1' : '0' %></div>
						<div class="hidden" id="comma">,</div>
					</li>
					<li class="checkbox1 three hidden" id="yes_no">
						<div class="hidden" id="index">3</div>
						<div class="label" id="haz3">Hazard Type 3</div>
						<div class="hidden" id="value"><%= @task.hazard3 ? '1' : '0' %></div>
						<div class="hidden" id="comma">,</div>
					</li>
					<li class="checkbox1 four hidden" id="yes_no">
						<div class="hidden" id="index">4</div>
						<div class="label" id="haz4">Hazard Type 4</div>
						<div class="hidden" id="value"><%= @task.hazard4 ? '1' : '0' %></div>
					</li>
				</ul>
			</td>
			<td>
				<%= form_for([@department,@task]) do |f| %>
					<%= f.fields_for :hazards do |builder| %>
						<%= render "hazard_fields", :f => builder%>
					<% end %>
					  <div class="complete">
				    <%= f.submit "Save as Complete"%>
				  </div>
				  <div class="save">
				    <%= f.submit "Save as Draft"%>
				  </div>
				<% end %>
			</td>
		</tr>
	</table>
