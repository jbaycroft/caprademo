<!-- Access / Egress Hazard Form -->
<h1><%= @hazard.access_risk_total %></h1>
<table><tr>			
				<td><%= f.select :access_risk_severity, [
					['-',1001],
					['None - No injury or environmental impact is possible (0)',0], 
					['Minor - Little to no effect on people, property, or the environment (1)',1], 
					['Serious - Incident does not require work stoppage (ex: bruising, 1st degree burns, abrasion, deep cuts), no regulatory legal action or fine (3)',3], 
					['Major - An ailment or injury requiring work stoppage (ex: loss of consciousness, bone break, head injury, 2nd degree burn), or results in regulatory legal action without a fine (6)',6], 
					['Grave - Illness or injury resulting in irreversible health consequences, fatal accidents, fire, explosion, or results in regulatory fines, penalties and legal action (10)',10]
					], :class=>"w20" %></td>		
				<td><span id= "access_risk_frequency" ></span></td>		
				<td><%= f.select :access_risk_mastery, [
					['-',1001],
					['Removed - Hazard has been eliminated or substituted and no longer exists (0)',0], 
					['Controlled - Controls are in place and cannot be bypassed and all other preventive measures implemented (1)',1], 
					['Partially Controlled - Individual controls are in place but some controls require additional training and/or enforcement (3)',3], 
					['Slightly Controlled - Individual controls in place but some controls can be easily bypassed (6)',6], 
					['No Control - No personal protection and preventive measures (10)',10]
					], :class=>"w20" %></td>		
				<td><span id= "access_risk_total" ></span></td>		
				<td><%= f.text_area :access_risk_comment %></td>		
			</tr></table>

<div class="hidden haz1">
	<table class="w100">
		<th class="sub" colspan="2">
			Hazard Evaluation Form - Access / Egress Hazard
		</th>
		<tr>
			<td class="tleft w75">
				Did Access / Egress Risk Change Since Last Assessment was Performed?:
			</td>
			<td class="tleft">
				<%= f.radio_button :access_change_yes_no, 'No' %>
				<%= f.label :access_change_yes_no_No, 'No' %>
				<%= f.radio_button :access_change_yes_no, 'Yes' %>
				<%= f.label :access_change_yes_no_Yes, 'Yes' %>
			</td>
		</tr>
	</table>
	<table class="w100">
		<tr>
			<td class="tleft w25">
				Description of Change:
			</td>
			<td class="tleft">
				<%= f.text_area :access_change_comment, :class=>"area w99" %>
			</td>
		</tr>
	</table>
  <table class="w100">
		<tr>
			<th class="sub w50">
				Description of Hazards:
			</th>
			<th class="sub">
				Description of Control Measures:
			</th>
		</tr>
		<tr>
			<td>
				<%= f.text_area :access_description_hazard, :class=>"area w99" %>
			</td>
			<td>
				<%= f.text_area :access_description_control, :class=>"area w99" %>
			</td>
		</tr>
	</table>
	<table>
		<tr>
			<th class="sub w60">
				Risk Questionnaire:
			</th>
			<th class="sub w10">
				No
			</th>
			<th class="sub w10">
				Yes
			</th>
			<th class="sub">
				Severity
			</th>
		</tr>
		<tr>
			<td>
				Are the hallways free and clear of clutter/crowding?
			</td>
			<td>
				<%= f.radio_button :access_question_1_yes_no, 'No' %>
			</td>
			<td>
				<%= f.radio_button :access_question_1_yes_no, 'Yes' %>
			</td>
			<td>
				<%= f.select :access_question_1_severity, [['-',0], ['Minor (1)',1], ['Serious (3)',3], ['Major (6)',6], ['Grave (10)',10]], :width=>"200px" %>
			</td>
		</tr>
	</table>
</div>













